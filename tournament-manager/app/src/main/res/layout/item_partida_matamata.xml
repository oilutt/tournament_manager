<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryLight">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_15"
        android:paddingLeft="@dimen/margin_15"
        android:paddingTop="@dimen/margin_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_40"
            android:background="@drawable/bg_partida_matamata"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time1"
                style="@style/Text12MontserratRegular"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:maxLines="1"
                android:padding="@dimen/margin_10"
                android:text="time 1" />

            <TextView
                android:id="@+id/golsTime1"
                style="@style/Text12MontserratRegular"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_5"
                android:textColor="@color/white"
                android:text="2"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_partida_matamata"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time2"
                style="@style/Text12MontserratRegular"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/margin_10"
                android:text="time 2" />

            <TextView
                android:id="@+id/golsTime2"
                style="@style/Text12MontserratRegular"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_5"
                android:textColor="@color/white"
                android:text="2"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginBottom="@dimen/margin_85"
                android:background="@color/colorPrimaryLightEdt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/colorPrimaryLightEdt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <View
                android:layout_width="3px"
                android:layout_height="@dimen/margin_90"
                android:layout_marginTop="1px"
                android:background="@color/colorPrimaryLightEdt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/colorPrimaryLightEdt" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>