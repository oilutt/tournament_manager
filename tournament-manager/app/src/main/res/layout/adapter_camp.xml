<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/image_camp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:tint="@color/colorPrimaryText2"
                android:src="@drawable/shield_83973"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10">

            <TextView
                android:id="@+id/tv_camp_nome"
                style="@style/Text18MontserratBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                tools:text="Campeonato" />

            <TextView
                android:id="@+id/tv_descricao"
                style="@style/Text14MontserratRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="-5dp"
                android:textColor="@color/colorPrimaryText2"
                android:ellipsize="end"
                android:layout_below="@+id/tv_camp_nome"
                android:maxLines="2"
                tools:text="askfbjaksfbkasbfadsjkfhjasfhasjkfhasjkfhaskfhasjkfhaskjfhadsjkfhaskf" />

            <TextView
                android:id="@+id/tv_camp_status"
                style="@style/Text16MontserratRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_alignParentBottom="true"
                android:lines="1"
                tools:text="Em andamento" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        style="@style/divider"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20" />

</LinearLayout>